    <script>
        // âš ï¸ YOUR KEYS GO HERE
        const firebaseConfig = {
            apiKey: "AIzaSyDyN_Auw8-Btynl_NuE-HK8KmzyEzJzcx0",
            authDomain: "love-pager-27704.firebaseapp.com",
            databaseURL: "https://love-pager-27704-default-rtdb.europe-west1.firebasedatabase.app",
            projectId: "love-pager-27704",
            storageBucket: "love-pager-27704.firebasestorage.app",
            messagingSenderId: "1060168327621",
            appId: "1:1060168327621:web:189061de4b7732ed0aabac"
        };

        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();

        document.getElementById('sendBtn').addEventListener('click', () => {
            const msg = document.getElementById('messageBox').value;
            const statusText = document.getElementById('status');
            
            if (!msg) { statusText.innerText = "Please type a message first!"; return; }
            statusText.innerText = "Sending...";

            // Writes to HER device
            database.ref('LovePagers/HerDevice').set({
                message: msg, timestamp: Date.now(), new_message_alert: true 
            }).then(() => {
                statusText.innerText = "Sent to her successfully! â¤ï¸";
                document.getElementById('messageBox').value = ''; 
            }).catch((error) => { statusText.innerText = "Error: " + error.message; });
        });
    </script>
